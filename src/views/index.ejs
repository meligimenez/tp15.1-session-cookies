<%- include('./partials/head', {title: 'Inicio' }) %>

  <body style="background-color: <%= locals.user?.color.hexa %>">
    <div class="row">
      <div class="col-md-12">
        <form action="" method="post">
          <h1>Session y Cookies</h1>

          <fieldset>
            <div>
              <label for="name">Ingrese su Nombre (requerido).:</label>
              <input type="text" id="name" name="name" />
              <p class="form_error">
                <%= locals.errors && errors.name ? errors.name.msg : null%>
              </p>
            </div>
            <div>
              <label for="email">Ingrese su Email (requerido).:</label>
              <input type="email" id="mail" name="email" />
              <p class="form_error">
                <%= locals.errors && errors.email ? errors.email.msg : null%>
              </p>
            </div>
            <div>
              <label for="age">Ingrese su Edad (opcional):</label>
              <input type="number" id="age" name="age" />
              <p class="form_error">
                <%= locals.errors && errors.age ? errors.age.msg : null%>
              </p>
            </div>
            <div>
              <label for="color">Elija un Color:</label>
              <select id="color" name="color">
                <option value="" selected disabled>Colores</option>
                <option value="pink">Rosa</option>
                <option value="black">Negro</option>
                <option value="red">Rojo</option>
              </select>
              <p class="form_error">
                <%= locals.errors && errors.color ? errors.color.msg : null%>
              </p>
            </div>
            <input type="checkbox" id="remember" name="remember" /><label class="light" for="remember">Recordar
              color</label>
          </fieldset>

          <button type="submit">Enviar</button>
        </form>
        <a href="/borrar">
          <button class="olvidar">Olvidar el Color</button>
        </a>
      </div>
    </div>
  </body>

  </html>